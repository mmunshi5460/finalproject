<%- include('layouts/header'); -%>

  <Body>
    <%- include('layouts/nav'); -%>


      <form class="page-form" method="POST" enctype="multipart/form-data">
        <p>
          <label for="title">Page Title:</label>
          <input type="text" name="title" id="title">
        </p>
        <p>
          <label for="image">Image:</label>
          <input type="file" name="image" id="image">
        </p>
        <p>
          <textarea name="content" id="content" rows="8" cols="60"> </textarea>
          <script>
            // Replace the <textarea id="editor1"> with a CKEditor 4 instance, using default configuration.
            CKEDITOR.replace('content');
          </script>
        </p>
        <p>
          <input class="submit-btn btn" type="submit" name="submit" id="submit" value="Submit" />
          <br>
        </p>
      </form>
  </Body>

  <%- include('layouts/footer'); -%>