<%- include('layouts/header'); -%>

  <body>

    <%- include('layouts/nav'); -%>
      <h2>Edit</h2>
      <form class="page-form" method="POST" enctype="multipart/form-data">

        <p>
          <label for="title">Page Title:</label>
          <input type="text" name="title" id="title" value="<%= page.title %>">
        </p>
        <p>
          <label for="image">Image Title:</label>
          <input type="file" name="image" id="image" value="<%= page.image %>">
        </p>
        <p>
          <textarea name="content" id="content" rows="10" cols="80"> <%= page.content %></textarea>
          <script>
            // Replace the <textarea id="editor1"> with a CKEditor 4 instance, using default configuration.
            CKEDITOR.replace('content');
          </script>
        </p>
        <p>
          <input class="submit-btn btn" type="submit" name="submit" id="submit" value="Submit" />
          <br>
        </p>
      </form>
  </Body>
  <%- include('layouts/footer'); -%>